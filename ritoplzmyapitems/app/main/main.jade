.container-fluid
    .row
        .col-sm-6.col-md-6.col-lg-6
        .col-sm-6.col-md-6.col-lg-6.header
            h1 <b>RitoPlz! My AP Items for</b>
            h3 Select your favorite champion:&nbsp&nbsp
            input.form-control(type='text', ng-model='championSelected', placeholder='Champions', typeahead='champion as champion.name for champion in champions | filter:{name:$viewValue}', typeahead-template-url='main/championTemplate.html')
            br
    .row
        .col-sm-3.col-md-3.col-lg-3.sidebar
            .sidePane(ng-include=" 'detail/detail.html' ", ng-controller="DetailCtrl")
        .row(ng-include=" 'scatter/scatter.html' ", ng-controller="ScatterCtrl")
        .row(ng-include=" 'showcase/showcase.html' ", ng-controller="ShowcaseCtrl")
